ramp-capacity-7 = Ôïø
ramp-capacity-8 = ÔñÄ
ramp-capacity-9 = ÔñÅ
ramp-capacity-10 = Ôï∏
;ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = Ôïπ
animation-charging-1 = Ôï∫
animation-charging-2 = Ôïª
animation-charging-3 = Ôïº
animation-charging-4 = ÔïΩ
animation-charging-5 = Ôïæ
animation-charging-6 = Ôïø
animation-charging-7 = ÔñÄ
